<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.co.snodnipper.android.issue198613.tintdrawables.DemoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Issue 198613!" />

    <android.support.v7.widget.TintAppCompatButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="@color/deep_orange500"
        android:backgroundTintMode="src_in"
        android:drawableBottom="@drawable/ic_navigation_menu_fixed_24dp"
        android:drawableLeft="@drawable/ic_navigation_menu_fixed_24dp"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_navigation_menu_fixed_24dp"
        android:drawableTint="@color/pink500"
        android:drawableTintMode="src_in"
        android:drawableTop="@drawable/ic_navigation_menu_fixed_24dp"
        android:padding="15dp"
        android:text="Menu"
        android:textColor="@color/blue500"
        app:backgroundTint="@color/deep_orange500"
        app:backgroundTintMode="src_in"
        app:drawableTint="@color/pink500"
        app:drawableTintMode="src_in" />

    <android.support.v7.widget.TintAppCompatButtonCustom
        android:id="@+id/menuCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:drawableBottom="@drawable/ic_navigation_menu_fixed_24dp"
        android:drawableLeft="@drawable/ic_navigation_menu_fixed_24dp"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_navigation_menu_fixed_24dp"
        android:drawableTop="@drawable/ic_navigation_menu_fixed_24dp"
        android:padding="15dp"
        android:text="CustomCode"
        android:textColor="@color/blue500" />

</RelativeLayout>
